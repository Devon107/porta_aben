---
    const experience = Astro.props
---
<article class="py-4 max-w-prose">
    <h3 class="text-sky-500 font-bold text-lg">{experience.cargo}</h3>
    <h4 class="text-slate-400 text-sm">{experience.initial} - {experience.finish != '' ? experience.finish : 'Actualmente'}</h4>
    <h5 class="text-cyan-500">{experience.company}</h5>
    <p>{experience.descript}</p>
    <div class="flex gap-2 pt-2">
        { experience.technologies?.map(technology => <img loading="lazy" class="size-6 rounded-md" src=`/${technology}.svg` alt=`logo de ${technology}` /> ) }
    </div>
</article>
---
    const experience = Astro.props
---
<article class="py-4 max-w-prose">
    <h3 class="text-slate-200 font-bold text-lg">{experience.cargo}</h3>
    <h4 class="text-slate-300 text-sm">{experience.initial} - {experience.finish != '' ? experience.finish : 'Actualmente'}</h4>
    <h5 class="text-slate-300">{experience.company}</h5>
    <p class="text-slate-200">{experience.descript}</p>
    <div class="flex gap-2 pt-2 flex-wrap">
        { experience.technologies?.map(technology =>
            <figure class="flex gap-2 items-center rounded-full bg-slate-900 py-1 px-2">
                <img 
                    loading="eager" 
                    class="size-4 rounded-md" 
                    src=`/${technology}.svg` 
                    alt=`logo de ${technology}` 
                />
                <span class="text-slate-300 text-xs capitalize">{technology}</span>
            </figure>
        ) }
    </div>
</article>
---
    const experience = Astro.props
---
<article class="group bg-slate-700 mx-auto rounded-lg overflow-hidden flex hover:scale-105 ease-in-out duration-300">
    <a href={experience.url} class="flex flex-col flex-wrap justify-between group-hover:bg-white">
        <img class="aspect-square object-cover rounded-t-lg group-hover:saturate-200" src={experience.image} alt=`captura de pantalla de ${experience.title}`>
        <div class="py-2 px-2">
            <h3 class="text-cyan-200 font-bold text-lg group-hover:text-black">{experience.title}</h3>
            <p class="text-sm text-slate-200 group-hover:text-black">{experience.descript}</p>
        </div>
        {experience.button && <button class="py-2 group-hover:text-black">{experience.button}</button>}
    </a>
</article>